<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <h3>Editar cuenta</h3>
        <hr>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="form-group col-md-12">
              <%= f.input :email, label: "Correo electronico", required: true, autofocus: true, class: 'form-group' %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-6">
                <%= f.input :password, label: "Contrase単a", autocomplete: "off", hint: "Dejar en blanco si no quiere cambiarla", required: false %>
            </div>
            <div class="form-group col-md-6">
                <%= f.input :password_confirmation, label: "Confirmar contrase単a", required: false %>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-md-12">
              <%= f.input :current_password, label: "Contrase単a actual", hint: "Necesitamos tu contrase単a actual para confirmar el cambio", required: true %>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Actualizar datos", class: 'btn btn-primary' %>
          </div>
        <% end %>
        <br>
        <h3>Cancelar mi cuenta</h3>
        <hr>
        <p>Infeliz?</p>
        <p><%= link_to "Cerrar mi cuenta", registration_path(resource_name), data: { confirm: "Esta seguro?" }, method: :delete, class: 'btn btn-outline-danger' %>
        <%= link_to "Cancelar", :back, class: "btn btn-outline-secondary" %></p>

      </div>
    </div>
  </div>
</div>
